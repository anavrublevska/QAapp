{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.answer_delete'|trans({'%id%': answer.id|default('')}) }}
{% endblock %}

{% block body %}
    <div>
        <a id="back" href="{{ url('question_show', {id:answer.question.id}) }}" class="btn btn-outline-secondary">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    <h1>{{ 'title.answer_delete'|trans({'%id%': answer.id|default('')}) }}</h1>
    <div id="form1">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <h3>{{ 'confirm'|trans }}</h3>
        <div id="save">
            <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-outline-danger" />
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}