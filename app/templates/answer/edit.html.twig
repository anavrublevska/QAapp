{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.answer_edit'|trans({'%id%': answer.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1 class="display-4 d-flex justify-content-center">{{ 'title.answer_edit'|trans({'%id%': answer.id|default('')}) }}</h1>
    <div>
        <a id="back" href="{{ url('question_show', {id: answer.question.id}) }}" class="create_button btn btn-outline-secondary">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    <div id="form1">
        {{ form_start(form, { method: 'PUT', action: url('answer_edit', {id: answer.id}) }) }}
        {{ form_widget(form) }}
        <div id="save">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-outline-warning" />
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}