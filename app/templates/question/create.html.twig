{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.question_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.question_create'|trans }}</h1>
    <div>
        <a id="back" href="{{ url('category_show', {id:question.category.id}) }}" class="btn btn-outline-secondary">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    <div id="form1">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div id="save">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-outline-success" />
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}